<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MasterFragments.AddTeacher">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add_teacher_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Teacher ID :"
                android:textColor="@color/black"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="@id/add_teacher_gld1"
                app:layout_constraintEnd_toEndOf="@id/add_teacher_gld2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/add_teacher_id_text"
                app:layout_constraintVertical_chainStyle="spread_inside"/>

            <EditText
                android:id="@+id/add_teacher_id_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:hint="Enter unique ID(Eg: TCH21NCB22"
                android:maxLines="1"
                app:layout_constraintStart_toStartOf="@id/add_teacher_gld1"
                app:layout_constraintEnd_toEndOf="@id/add_teacher_gld2"
                app:layout_constraintTop_toBottomOf="@id/add_teacher_id"
                app:layout_constraintBottom_toTopOf="@id/add_teacher_name"/>

            <TextView
                android:id="@+id/add_teacher_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:textSize="30sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/add_teacher_id_text"
                app:layout_constraintBottom_toTopOf="@id/add_teacher_name_text"
                app:layout_constraintStart_toStartOf="@id/add_teacher_gld1"
                app:layout_constraintEnd_toEndOf="@id/add_teacher_gld2"/>

            <EditText
                android:id="@+id/add_teacher_name_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:autofillHints="name"
                android:hint="Enter full name..."
                android:textSize="25sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/add_teacher_name"
                app:layout_constraintStart_toStartOf="@id/add_teacher_gld1"
                app:layout_constraintEnd_toEndOf="@id/add_teacher_gld2"
                app:layout_constraintBottom_toTopOf="@id/add_teacher_email"/>

            <TextView
                android:id="@+id/add_teacher_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Email :"
                android:textSize="30sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/add_teacher_gld1"
                app:layout_constraintEnd_toEndOf="@id/add_teacher_gld2"
                app:layout_constraintTop_toBottomOf="@id/add_teacher_name_text"
                app:layout_constraintBottom_toTopOf="@id/add_teacher_email_text"/>

            <EditText
                android:id="@+id/add_teacher_email_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:autofillHints="emailAddress"
                android:hint="Enter valid email address..."
                android:textColor="@color/black"
                android:textSize="25sp"
                app:layout_constraintStart_toStartOf="@id/add_teacher_gld1"
                app:layout_constraintEnd_toEndOf="@id/add_teacher_gld2"
                app:layout_constraintTop_toBottomOf="@id/add_teacher_email"
                app:layout_constraintBottom_toTopOf="@id/add_teacher_phone"/>

            <TextView
                android:id="@+id/add_teacher_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Phone No. :"
                android:textSize="30sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/add_teacher_email_text"
                app:layout_constraintStart_toStartOf="@id/add_teacher_gld1"
                app:layout_constraintEnd_toEndOf="@id/add_teacher_gld2"
                app:layout_constraintBottom_toTopOf="@id/add_teacher_phone_text"/>

            <EditText
                android:id="@+id/add_teacher_phone_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:autofillHints="phone"
                android:inputType="phone"
                android:hint="Enter phone number..."
                android:textSize="25sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/add_teacher_phone"
                app:layout_constraintStart_toStartOf="@id/add_teacher_gld1"
                app:layout_constraintEnd_toEndOf="@id/add_teacher_gld2"
                app:layout_constraintBottom_toTopOf="@id/add_teacher_dept"/>
            
            <TextView
                android:id="@+id/add_teacher_dept"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Department :"
                android:textSize="30sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/add_teacher_phone_text"
                app:layout_constraintStart_toStartOf="@id/add_teacher_gld1"
                app:layout_constraintEnd_toEndOf="@id/add_teacher_gld2"
                app:layout_constraintBottom_toTopOf="@id/add_teacher_dept_text"/>
            
            <EditText
                android:id="@+id/add_teacher_dept_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@id/add_teacher_dept"
                app:layout_constraintStart_toStartOf="@id/add_teacher_gld1"
                app:layout_constraintEnd_toEndOf="@id/add_teacher_gld2"
                app:layout_constraintBottom_toTopOf="@id/add_teacher_btn"/>
            
            <Button
                android:id="@+id/add_teacher_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:textSize="25sp"
                android:layout_margin="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/add_teacher_dept_text"
                app:layout_constraintStart_toStartOf="@id/add_teacher_gld1"
                app:layout_constraintEnd_toEndOf="@id/add_teacher_gld2"/>


                
                




            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/add_teacher_gld1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.05" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/add_teacher_gld2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.95"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>
